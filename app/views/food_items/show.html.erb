<div>
  <div>
    <h1>
      Food item details
    </h1>

    <div>
      <div>
        <a href="/food_items">
          <button type="button" class="btn btn-secondary">Go Back</button>
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Item name
      </dt>
      <dd>
        <%= @the_food_item.item_name %>
      </dd>

      <dt>
        Food category
      </dt>
      <dd>
        <%= @the_food_item.food_category %>
      </dd>

      <dt>
        Expiry date
      </dt>
      <dd>
        <%= @the_food_item.expiry_date %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <% if @the_food_item.expiry_date < Date.today %>
            <p class="text-danger">Expired</p>
          <% else %>
            <p class="text-success">Fresh</p>
          <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food_item.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food_item.updated_at) %> ago
      </dd>
    </dl>
  </div>
  <div>
        <a href="/delete_food_item/<%= @the_food_item.id %>">
          <button class="btn btn-primary">Delete Food Item</button>
        </a>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit food item
    </h2>

    <form action="/modify_food_item/<%= @the_food_item.id %>"  method="post" >
      
      <div>
        <label for="item_name_box">
          Item name
        </label>

        <input type="text" id="item_name_box" name="query_item_name" value="<%= @the_food_item.item_name %>">
      </div>

      <div>
        <label for="food_category_box">
          Food category
        </label>

        <input type="text" id="food_category_box" name="query_food_category" value="<%= @the_food_item.food_category %>">
      </div>

      <div>
        <label for="expiry_date_box">
          Expiry date
        </label>

        <input type="date" id="expiry_date_box" name="query_expiry_date" value="<%= @the_food_item.expiry_date %>">
      </div>

      <button class="btn btn-secondary">Update Food Item</button>
    </form>
  </div>
</div>

<hr>
