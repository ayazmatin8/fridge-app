<div>
  <div>
    <h1>
      List of all food items
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new food item
    </h2>

    <form action="/insert_food_item" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="item_name_box">
          Item name
        </label>

        <input type="text" id="item_name_box" name="query_item_name">
      </div>

      <div>
        <label for="food_category_box">
          Food category
        </label>

        <input type="text" id="food_category_box" name="query_food_category">
      </div>

      <div>
        <label for="expiry_date_box">
          Expiry date
        </label>

        <input type="date" id="expiry_date_box" name="query_expiry_date">
      </div>

      <button>
        Create food item
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Item name
        </th>

        <th>
          Food category
        </th>

        <th>
          Expiry date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_food_items.each do |a_food_item| %>
      <tr>
        <td>
          <%= a_food_item.id %>
        </td>

        <td>
          <%= a_food_item.user_id %>
        </td>

        <td>
          <%= a_food_item.item_name %>
        </td>

        <td>
          <%= a_food_item.food_category %>
        </td>

        <td>
          <%= a_food_item.expiry_date %>
        </td>

        <td>
          <%= time_ago_in_words(a_food_item.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_food_item.updated_at) %> ago
        </td>

        <td>
          <a href="/food_items/<%= a_food_item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
